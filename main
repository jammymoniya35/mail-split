  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const firebaseConfig = {
        apiKey: "AIzaSyAZ5UMghnT33UrBcPWWQQ8thmx9Dhripl0",
        authDomain: "mail-split-23793.firebaseapp.com",
        projectId: "mail-split-23793",
        storageBucket: "mail-split-23793.firebasestorage.app",
        messagingSenderId: "797915080111",
        appId: "1:797915080111:web:ccfaa2e7b9d7d2fe5fbb5a"
      };

      firebase.initializeApp(firebaseConfig);
      const database = firebase.database();
      const emailRef = database.ref('email_list/default');
      
      const emailInput = document.getElementById('emailInput');
      const emailList = document.getElementById('emailList');
      const statusDot = document.getElementById('statusDot');
      const statusText = document.getElementById('statusText');
      const toast = document.getElementById('toast');
      
      let isUpdating = false;

      function showToast(message) {
        toast.textContent = message;
        toast.classList.add('show');
        setTimeout(() => {
          toast.classList.remove('show');
        }, 2000);
      }

      async function copyToClipboard(text) {
        try {
          await navigator.clipboard.writeText(text);
          showToast('âœ“ å·²å¤åˆ¶: ' + text);
        } catch (err) {
          const textarea = document.createElement('textarea');
          textarea.value = text;
          textarea.style.position = 'fixed';
          textarea.style.opacity = '0';
          document.body.appendChild(textarea);
          textarea.select();
          document.execCommand('copy');
          document.body.removeChild(textarea);
          showToast('âœ“ å·²å¤åˆ¶: ' + text);
        }
      }

      function renderEmailList(text) {
        if (!text || !text.trim()) {
          emailList.innerHTML = '<div class="empty-state">ğŸ“ åœ¨ä¸Šæ–¹è¾“å…¥æ¡†ç²˜è´´é‚®ç®±åï¼Œè¿™é‡Œä¼šæ˜¾ç¤ºå¯ç‚¹å‡»å¤åˆ¶çš„åˆ—è¡¨</div>';
          return;
        }

        const emails = text.split('\n').filter(line => line.trim());
        
        if (emails.length === 0) {
          emailList.innerHTML = '<div class="empty-state">ğŸ“ åœ¨ä¸Šæ–¹è¾“å…¥æ¡†ç²˜è´´é‚®ç®±åï¼Œè¿™é‡Œä¼šæ˜¾ç¤ºå¯ç‚¹å‡»å¤åˆ¶çš„åˆ—è¡¨</div>';
          return;
        }

        const html = emails.map((email, index) => `
          <div class="email-item" onclick="copyEmail('${email.trim().replace(/'/g, "\\'")}')">
            <span class="email-number">${index + 1}.</span>
            <span class="email-text">${email.trim()}</span>
            <svg class="copy-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
              <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
            </svg>
          </div>
        `).join('');

        emailList.innerHTML = html;
      }

      window.copyEmail = function(email) {
        copyToClipboard(email);
      };

      emailInput.addEventListener('input', () => {
        if (isUpdating) return;
        
        const text = emailInput.value;
        emailRef.set(text).catch(error => {
          console.error('ä¿å­˜å¤±è´¥:', error);
          showToast('âŒ ä¿å­˜å¤±è´¥ï¼Œè¯·æ£€æŸ¥ç½‘ç»œ');
        });
      });

      emailRef.on('value', snapshot => {
        const text = snapshot.val() || '';
        
        if (emailInput.value !== text) {
          isUpdating = true;
          emailInput.value = text;
          setTimeout(() => { isUpdating = false; }, 100);
        }
        
        renderEmailList(text);
      }, error => {
        console.error('åŒæ­¥å¤±è´¥:', error);
        statusText.textContent = 'åŒæ­¥å¤±è´¥';
        statusDot.classList.remove('connected');
      });

      database.ref('.info/connected').on('value', snapshot => {
        if (snapshot.val() === true) {
          statusDot.classList.add('connected');
          statusText.textContent = 'å·²è¿æ¥åŒæ­¥';
        } else {
          statusDot.classList.remove('connected');
          statusText.textContent = 'è¿æ¥æ–­å¼€';
        }
      });
    });
